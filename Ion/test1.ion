struct Any {
    ptr: void*;
    type: typeid;
}

func print_any(any: Any) {
    switch (any.type) {
    case typeof(int):
        printf("%d", *(:int const*)any.ptr);
    case typeof(float):
        printf("%f", *(:float const *)any.ptr);
    default:
        printf("<unknown>");
    }
}

func println_any(any: Any) {
    print_any(any);
    printf("\n");
}

func print_type(type: typeid) {
    typeinfo := get_typeinfo(type);
    if (!typeinfo) {
        printf("<typeid %d>", type);
		return;
    }
    switch (typeinfo.kind) {
    case TYPE_PTR:
        printf("(ptr ");
        print_type(typeinfo.base);
        printf(")");
    case TYPE_CONST:
        printf("(const ");
        print_type(typeinfo.base);
        printf(")");
    case TYPE_STRUCT:
    case TYPE_UNION:
        printf("(%s %s ", typeinfo.kind == TYPE_STRUCT ? "struct" : "union", typeinfo.name);
        for (i := 0; i < typeinfo.num_fields; i++) {
            field := typeinfo.fields[i];
            printf("%s[%s %d ", i == 0 ? "" : ", ", field.name, field.offset);
            print_type(field.type);
            printf("]");
        }
        printf(")");
    default:
        if (typeinfo.name) {
            printf("%s", typeinfo.name);
        } else {
            printf("typeid %d>", type);
        }
    }
}

func println_type(type: typeid) {
    print_type(type);
    printf("\n");
}

func print_typeinfo(type: typeid) {
    typeinfo := get_typeinfo(type);
    if (!typeinfo) {
        printf("<no typeinfo>");
        return;
    }
    switch (typeinfo.kind) {
    case TYPE_INT:
        printf("INT ");
    default:
        printf("? ");
    }
    printf("size=%d align=%d\n", typeinfo.size, typeinfo.align);
}

func println_typeinfo(type: typeid) {
    print_typeinfo(type);
    printf("\n");
}

